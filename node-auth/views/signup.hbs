<header class="intro-header">   
    <div class="container">    
        <section>

            <hgroup>
                <h2>Node-auth Sign-up!</h2>
                <p>Please enter your details to REGISTER yourself</p>
            </hgroup>

            <form action="/auth/signup" method="post" class="log-form">

                <div class="group log-input">
                    <input type="text" id="fname" name="firstName" placeholder="First Name" required>
                </div>

                <div class="group log-input">
                    <input type="text" id="lname" name="lastName" placeholder="Last Name">
                </div>

                <div class="group log-input">
                    <input type="email" id="email" name="email" placeholder="Email ID" required>
                </div>

                <div class="group log-input">
                    <label for="male" name="gender">Gender</label>
                    <div class="radio-toolbar">
                        <input type="radio" id="male" name="gender" value="male">
                        <label for="male">Male</label>

                        <input type="radio" id="female" name="gender" value="female">
                        <label for="female">Female</label>

                        <input type="radio" id="other" name="gender" value="other">
                        <label for="other">Other</label>
                    </div>
                </div>

                <div class="group log-input">
                    <input type="password" id="password" name="password" placeholder="Password" required>
                </div>

                <span class="check left-align">
                    <input type="checkbox" id="checkbox" name="T&C" checked="checked" required value="Agreed">
                    <label>Terms and conditions</label>
                </span>

                <br><br>

                <div class="container-log-btn">
                    <button type="submit" name="btn_submit" class="log-form-btn">
                        <span>Sign-up</span>
                    </button>
                </div>

            </form>



        </section>
    </div>
</header>